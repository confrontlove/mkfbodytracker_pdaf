<launch>
  <!-- Play video file using gscam -->
 
  <arg name="FILENAME" default="/opt/ChaLearn/validation1/Sample00425/Sample00425_color"/>
  <arg name="LOOP" default="false"/>
  <arg name="SAVE" default="false"/>

  <node name="gscam_driver_v4l" pkg="gscam" type="gscam" output="screen" required="true">
    <param name="camera_name" value="default"/>
    <param name="camera_info_url" value="package://mkfbodytracker_pdaf/cal.yml"/>
    <param name="gscam_config" value="filesrc location=$(arg FILENAME).mp4 ! decodebin ! ffmpegcolorspace"/>
    <param name="frame_id" value="/camera_link"/>
    <param name="sync_sink" value="true"/>
    <param name="reopen_on_eof" value="$(arg LOOP)"/>
  </node>

  <arg name="file1" default="/data13D_PCA_100000_25_12.yml"/>
  <arg name="file2" default="/data23D_PCA_100000_25_12.yml"/>
  <arg name="dir_ims" default="/tmp/"/>

  <param name="left_arm_training" value="$(arg file1)"/>
  <param name="right_arm_training" value="$(arg file2)"/>

  <node pkg="faceTracking" type="faceTrack" name="flow" output="screen">
	<remap from="image" to="/camera/image_raw"/>
  </node>

<!--  <node pkg="measurementproposals" type="handTracker" name="handTracker" output="screen"-->
   <node pkg="handBlobTracker" type="handTracker" name="handTracker" output="screen">
	<remap from="/rgb/image_color" to="/camera/image_raw"/>
  </node>

  <node pkg="mkfbodytracker_pdaf" type="poseTracker" name="poseTracker" output="screen">
	<remap from="/rgb/image_raw" to="/camera/image_raw"/>
  </node>
  
  <group if="$(arg SAVE)">
    <node pkg="rosbag" type="record" name="rosbag_record" args="-o $(arg FILENAME) /correctedFaceHandPose /tf"/>
  </group>

<!--  <node pkg="bag_tools" type="image_sequence_publisher.py" name="image_seq" output="screen" required="true">
	<param name="image_dir" value="$(arg dir_ims)"/>
	<param name="file_pattern" value="*.png"/>
        <param name="camera_info_file" value="/home/mgb45/Documents/ros_workspace/mkfbodytracker/cal_sign.yml"/>
        <param name="frequency" value="10"/>
  </node>-->

<!--  <node pkg="image_view" type="image_view" name ="im0">
	<remap from="image" to ="camera/image_raw"/>
  </node>-->

  <node pkg="image_view" type="image_view" name ="im2">
	<remap from="image" to ="probImage"/>
  </node>

  <node pkg="image_view" type="image_view" name ="im3">
        <remap from="image" to ="likelihood"/>
  </node>

  <node pkg="image_view" type="image_view" name ="im4">
        <remap from="image" to ="poseImage"/>
  </node>

</launch>
